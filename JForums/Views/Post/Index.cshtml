@model JForums.Models.Post.PostIndex

<h1>@Model.Title</h1>

<div>
    Author: @Model.AuthorName{ @Model.AuthorRating}
    Created: @Model.Created
</div>

<div>
    @Model.PostContent
</div>

@if (Model.Replies.Any())
{

    foreach (var reply in Model.Replies)
    {
        <div>

            <div>
                Reply Author: @reply.AuthorName{ @Model.Replies}
                Reply Created: @reply.Created
            </div>

            <div>
                @reply.PostContent
            </div>
        </div>
    }
}