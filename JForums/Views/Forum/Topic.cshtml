@model JForums.Models.Forums.ForumTopic

<h1>Welcome to the @Model.Forum.Name Forum!</h1>

<span id="headingBtn">
    <a asp-controller="Post"
       asp-action="Create"
       asp-route-id="@Model.Forum.Id"class="btn btn-newPost">
        Create Post
    </a>
</span>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route="@post.Id">@post.Title</a>
                    </td>
                
                    <td>
                        @post.AuthorName
                    </td>
                
                    <td>
                        @post.DatedPosted
                    </td>
                
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>
            It Looks like there are no @Model.Forum.Name post yet. <br/>
            Want to
            <a asp-controller="Post" asp-action="Create" asp-route.id="@Model.Forum.Id">
                <span>create</span>
            </a>
            one ?
        </h3>
    </div>
}
